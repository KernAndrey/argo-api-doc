---
swagger: "2.0"
info:
  description: "This is API documantation for mobile app developer for ARGO project"
  version: "1.0.0"
  title: "Swagger Argo Mobile"
  termsOfService: "http://swagger.io/terms/"
  contact:
    email: "kernandrey1@gmail.com"
  license:
    name: "Apache 2.0"
    url: "http://www.apache.org/licenses/LICENSE-2.0.html"
host: ""
basePath: "/v2"
tags:
- name: "tasks"
  description: "Endpoints for project tasks"
- name: "notes"
  description: "Access to Petstore orders"
schemes:
- "https"
- "http"
paths:
  /api/v1/tasks/:
    get:
      tags:
      - "tasks"
      summary: "Returns all active tasks  where user is estimator or technician"
      description: ""
      consumes:
      - "application/json"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            type: array
            items:
              $ref: "#/definitions/Task"
      security:
      - api_key: []

  /api/v1/task/<int:task_id>/notes:
    get:
      tags:
      - "notes"
      summary: "Returns all notes for the task"
      description: ""
      consumes:
      - "application/json"
      produces:
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            type: array
            items:
              $ref: "#/definitions/Note"
      security:
      - api_key: []

  /api/v1/task/<int:task_id>/note:
    post:
      tags:
        - "notes"
      summary: "Create a note for the task"
      description: ""
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                note:
                  type: string
                  description: Text for the note
                  example: "yet meadow concerned quicker procurement indeed tensely gymnast gah"
                parent_id:
                  type: integer
                  description: ID of the parent (if it is the reply) or null
                  example: 25
              required:
                - note
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Note"
      security:
        - api_key: [ ]

securityDefinitions:
  api_key:
    type: "apiKey"
    name: "api_key"
    in: "header"

definitions:
  Task:
    type: object
    properties:
      id:
        type: integer
        example: 62
      name:
        type: string
        example: "Boiler maintenance"
      reference_number:
        type: string
        example: 'N-1'
      client:
        type: string
        example: "Colleen Diaz"
      status:
        type: string
        example: "01_in_progress"
      estimator:
        type: string
        example: "Amy Watson"
      technician:
        type: string
        example: "Amy Watson"
  Note:
    type: object
    properties:
      id:
        type: integer
        example: 23
      note:
        type: string
        example: "yet meadow concerned quicker procurement indeed tensely gymnast gah"
      employee:
        type: string
        example: "Amy Watson"
      parent_id:
        type: [ integer, "boolean" ]
        example: false
      child_ids:
        type: array
        items:
          type: object
          properties:
            id:
              type: integer
              example: 17
            note:
              type: string
              example: "yet meadow concerned quicker procurement indeed tensely gymnast gah"
            employee:
              type: string
              example: "Mitchell Admin"
            parent_id:
              type: integer
              example: 14
            child_ids:
              type: array
              items:
                type: object
            attachment_ids:
              type: array
              items:
                type: integer
            created_by_app:
              type: boolean
              example: false
            create_date:
              type: string
              format: date-time
              example: "2025-02-10 08:48:41"
      attachment_ids:
        type: array
        items:
          type: integer
      created_by_app:
        type: boolean
        example: true
      create_date:
        type: string
        format: date-time
        example: "2025-02-10 09:30:26"
